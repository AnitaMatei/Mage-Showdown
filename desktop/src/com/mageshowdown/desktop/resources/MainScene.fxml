<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="835.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mageshowdown.desktop.MainSceneController">
    <VBox alignment="TOP_RIGHT" layoutX="735.0" layoutY="100.0" prefHeight="200.0" prefWidth="118.0" spacing="20.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets right="20.0" top="20.0"/>
        </padding>
        <Button fx:id="playButton" mnemonicParsing="false" onAction="#playBtnClicked" text="PLAY"
                textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="configButton" mnemonicParsing="false" onAction="#configBtnClicked" text="CONFIGURE"/>
        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitBtnClicked" text="EXIT"/>
    </VBox>
</AnchorPane>
